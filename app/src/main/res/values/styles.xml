<resources>

    <style name="BaseApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="coll_expand_title">
        <item name="android:textColor">@color/colorGrin</item>
    </style>

    <style name="coll_basic_title">
        <item name="android:textColor">@color/colorGrin</item>
    </style>

    <style name="coll_main_basic_title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BaseApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
